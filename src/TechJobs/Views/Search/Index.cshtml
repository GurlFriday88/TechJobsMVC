<h1>@ViewBag.title</h1>

<form action="/Search/Results">
    <h2>Search by: @ViewBag.selectedSearchType</h2>

    <p>
        @foreach (KeyValuePair<string, string> column in ViewBag.columns)
        {
            <span>
                <input type="radio"
                       name="searchType"
                       id="@column.Key"
                       value="@column.Key"
                       checked="@column.Key == 'all''" />
                <label for="@column.Key">@column.Value</label>
            </span>
        }
    </p>

    <p>
        <label for="searchTerm">Keyword:</label>
        <input type="text" name="searchTerm" id="searchTerm" />
    </p>

    <input type="submit" value="Search" />
</form>

<hr />

@if (ViewBag.jobs != null)
{

    <h3>@ViewBag.jobs.Count Result(s)</h3>

    // TODO #2 - Loop over jobs dictionary and display all job fields
    foreach (Dictionary<string, string> job in @ViewBag.jobs)
    {
        <table>
            @for (int i = 0; i < ViewBag.jobs.Count; i++)
            {
                <tr class="@( i % 2 == 0 ? "even" : "odd" ) ">
                    @* if the iterable is even then the table row class becomes even else its odd *@
                    <td>@job.Keys</td>
                    <td>@job.Values</td>
                </tr>
            }
        </table>


    }
}

@* for every job in the list display  each column and its value in their own table data elements. every table row has an alternating color *@